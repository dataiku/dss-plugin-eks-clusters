{
    "meta": {
        "label": "Instance Type Preferences",
        "pluralLabel": "Instance Type Preferences",
        "description": "Preset",
        "icon": "icon-key"
    },

    "defaultDefinableInline": false,
    "defaultDefinableAtProjectLevel": true,

    "params": [
        {
            "name": "instanceFamily",
            "label": "Instance Families",
            "description": "If empty, uses AWS credentials from the environment (IAM role, ~/.aws/credentials or AWS_ACCESS_KEY_ID environment variable)",
            "type": "MULTISELECT",
            "selectChoices": [
                {"value": "m", "label": "M Family - General Purpose*"},
                {"value": "r", "label": "R Family - Memory-Optimized*"},
                {"value": "c", "label": "C Family - Compute-Optimized*"},
                {"value": "t", "label": "T Family - Burstable General Purpose"},
                {"value": "p", "label": "P Family - GPU-Optimized"},
                {"value": "g", "label": "G Family - GPU-Optimized"},
                {"value": "inf", "label": "Inf Family - ML Inteference"},
                {"value": "x", "label": "X Family - High Memory"},
                {"value": "z", "label": "Z Family - High Memory - High Compute"},
                {"value": "d", "label": "D Family - Storage Optimized"},
                {"value": "h", "label": "H Family - Storage Optimized"},
                {"value": "i", "label": "I Family - Storage Optimized"}
              ],
            "defaultValue": ["m","r","c"],
            "mandatory": false
        },
        {
            "name": "instanceVCPUsMin",
            "label": "Min Cores",
            "description": "Minimum Number of Cores an Instance Type can have (will be set to 2 if not selected).",
            "type": "INT",
            "minI": 2,
            "maxI": 96,
            "defaultValue": "4",
            "mandatory": false
        },
        {
            "name": "instanceVCPUsMax",
            "label": "Max vCPUs",
            "description": "Maximum Number of Cores an Instance Type.",
            "type": "INT",
            "minI": 2,
            "maxI": 96,
            "defaultValue": "16",
            "mandatory": false
        },
        {
            "name": "memoryMin",
            "label": "Min Memory",
            "description": "Minimum Memory (GB) of an Instance Type (will be set to 4 if not selected).",
            "type": "INT",
            "minI": 4,
            "maxI": 96,
            "defaultValue": "4",
            "mandatory": false
        },
        {
            "name": "memoryMax",
            "label": "Max Memory",
            "description": "Maximum Memory (GB) of an Instance Type.",
            "type": "INT",
            "minI": 2,
            "maxI": 96,
            "defaultValue": "128",
            "mandatory": false
        }
    ]
}


