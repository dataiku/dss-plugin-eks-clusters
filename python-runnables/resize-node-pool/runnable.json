{
    "meta": {
        "label": "Resize cluster",
        "description": "Resize node group in cluster",
        "icon": "icon-resize-full"
    },

    "impersonate": false,

    "permissions": [],

    "resultType": "HTML",

    "resultLabel": "pools",
    "extension": "html",
    "mimeType": "text/html",

    "macroRoles": [
        { "type":"CLUSTER", "targetParamsKey":"clusterId", "limitToSamePlugin":true }
    ],
    
    "params": [
        {
            "name": "clusterId",
            "label": "Cluster",
            "type": "CLUSTER",
            "description": "Cluster (in DSS)",
            "mandatory": true
        },
        {
            "name": "numNodes",
            "label": "Number of nodes",
            "description": "Set to 0 to delete the node group",
            "type": "INT",
            "mandatory": true
        },
        {
            "name": "minNumNodes",
            "label": "Min number of nodes",
            "type": "INT",
            "description": "-1 for optional",
            "mandatory" : true,
            "defaultValue": -1
        },
        {
            "name": "maxNumNodes",
            "label": "Max number of nodes",
            "type": "INT",
            "description": "-1 for optional",
            "mandatory" : true,
            "defaultValue": -1
        },
        {
            "name": "nodeGroupId",
            "label": "Node group",
            "description": "Id of node group to resize, if not default",
            "type": "STRING",
            "mandatory": false
        }
    ]
}
